<form class="" action="/todos/edit/{{id}}" method="post">
  <fieldset>
    <input type="text" name="todo" value="{{content}}" placeholder="New To Do">
    <input type="checkbox" name="status" {{#if status}} checked {{/if}}>
    <input type="submit" name="submit" value="Submit">
  </fieldset>
</form>

